<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#33c1c1c1"
    android:padding="24dp">
    <Button
        android:id="@+id/btn_save_and_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4dc1c1c1"
        android:text="@string/string_save_and_continue"/>
    <Button
        android:id="@+id/btn_save_and_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:background="#4dc1c1c1"
        android:text="@string/string_save_and_close"/>
</LinearLayout>
