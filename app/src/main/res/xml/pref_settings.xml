<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/settings_category_search">
        <ListPreference
            android:key="@string/pref_key_home_page"
            android:title="@string/pref_label_home_page"
            android:defaultValue="@string/pref_value_home_page_naver"
            android:entries="@array/pref_labels_home_page"
            android:entryValues="@array/pref_values_home_page"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"/>
        <ListPreference
            android:key="@string/pref_key_target_of_auto_search"
            android:title="@string/pref_label_target_of_auto_search"
            android:defaultValue="@string/pref_value_target_of_auto_search_naver_total"
            android:entries="@array/pref_labels_target_of_auto_search"
            android:entryValues="@array/pref_values_target_of_auto_search"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/settings_category_data">
        <Preference
            android:key="@string/settings_key_delete_all"
            android:title="@string/settings_title_delete_all"
            android:summary="@string/settings_summary_delete_all">
        </Preference>
        <Preference
            android:key="@string/settings_key_upload_backup_file"
            android:title="@string/settings_title_upload_backup_file"
            android:summary="@string/settings_summary_upload_backup_file">
        </Preference>
        <Preference
            android:key="@string/settings_key_download_backup_file"
            android:title="@string/settings_title_download_backup_file"
            android:summary="@string/settings_summary_download_backup_file">
        </Preference>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/settings_category_etc">
        <ListPreference
            android:key="@string/pref_key_tab_index"
            android:title="@string/pref_label_tab_index"
            android:defaultValue="0"
            android:entries="@array/pref_labels_tab_index"
            android:entryValues="@array/pref_values_tab_index"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/settings_category_app_info">
        <Preference
            android:key="@string/settings_key_send_mail"
            android:title="@string/settings_title_send_mail"
            android:summary="@string/settings_summary_send_mail">
        </Preference>
        <Preference
            android:key="@string/settings_key_license"
            android:title="@string/settings_title_license"
            android:summary="@string/settings_summary_license">
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>