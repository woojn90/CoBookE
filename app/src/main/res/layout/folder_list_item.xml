<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorBackgroundSecond"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/padding_basic_of_recycler_view_item"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_ui_folder"
            android:contentDescription="@string/content_desc_folder"/>
        <TextView
            style="@style/TextViewTitle"
            android:id="@+id/tv_folder_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textSize="16sp"
            tools:text="Title"/>
        <Button
            android:id="@+id/btn_folder_overflow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_menu_overflow"/>
    </LinearLayout>

</android.support.v7.widget.CardView>