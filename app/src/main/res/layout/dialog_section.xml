<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_basic_of_activity"
    android:stretchColumns="1">
    <TableRow>
        <TextView
            style="@style/TextViewInDialog"
            android:text="@string/string_title"/>
        <EditText
            style="@style/EditTextInDialog"
            android:id="@+id/et_section_title"
            android:layout_marginLeft="@dimen/margin_left_of_edit_text"
            android:layout_marginStart="@dimen/margin_left_of_edit_text"
            android:hint="@string/hint_section_title"/>
    </TableRow>
    <TableRow>
        <TextView
            style="@style/TextViewInDialog"
            android:text="@string/string_search_word"/>
        <EditText
            style="@style/EditTextInDialog"
            android:id="@+id/et_section_search_word"
            android:layout_marginLeft="@dimen/margin_left_of_edit_text"
            android:layout_marginStart="@dimen/margin_left_of_edit_text"
            android:hint="@string/hint_section_search_word"/>
    </TableRow>
    <TableRow>
        <TextView
            style="@style/TextViewInDialog"
            android:text="@string/string_search_engine"/>
        <Spinner
            android:id="@+id/sp_search_engine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_of_edit_text"
            android:layout_marginStart="@dimen/margin_left_of_edit_text"/>
    </TableRow>
</TableLayout>
