<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/tv_course_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        tools:text="Title" />

    <TextView
        android:id="@+id/tv_course_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_course_title"
        android:textSize="16sp"
        tools:text="Description" />

    <FrameLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/iv_favorite_y_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_favorite_y"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/iv_favorite_n_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_favorite_n"/>
    </FrameLayout>
</RelativeLayout>