<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/settings_category_ui">
        <ListPreference
            android:key="@string/pref_key_tab_index"
            android:title="@string/pref_label_tab_index"
            android:defaultValue="0"
            android:entries="@array/pref_labels_tab_index"
            android:entryValues="@array/pref_values_tab_index"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/settings_category_search">
        <ListPreference
            android:key="@string/pref_key_search_engine"
            android:title="@string/pref_label_search_engine"
            android:defaultValue="@string/pref_value_search_engine_naver_total"
            android:entries="@array/pref_labels_search_engine"
            android:entryValues="@array/pref_values_search_engine"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/settings_category_app_info">
        <Preference
            android:summary="@string/settings_developer_info_summary"
            android:title="@string/settings_developer_info">
        </Preference>
        <Preference
            android:summary="@string/settings_developer_mail_summary"
            android:title="@string/settings_developer_mail">
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>